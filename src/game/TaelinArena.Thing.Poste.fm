import TaelinArena.Game

poste_fun(self: Thing) : Thing
  let self = self <= thing(pos = v3(0,0,0))
  let self = self <= thing(mid = POSTE_IDLE_000)
  case self |thing
  let lpos = case self.pos|v3 v3(self.pos.x,self.pos.y,112)
  let lrng = 256.0
  let lsub = 0.2
  let ladd = 0.1
  let lght = light(lpos,lrng,lsub,ladd)
  let self = illumine(self, 0, 2147483648, [lght])
  self
